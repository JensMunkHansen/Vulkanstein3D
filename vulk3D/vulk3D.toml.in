# This configuration file contains all options for the vulkan-renderer.
# Do not change any values unless you know exactly what you are doing!

title = "vulkan-renderer-configuration"

[vulkan]
# Preferred GPU (partial name match). Examples: "Intel", "NVIDIA"
preferred_gpu = "NVIDIA"

# Driver ICDs to try in order of preference (first available will be used)
driver_icds = [
    "/usr/share/vulkan/icd.d/nvidia_icd.json",
    "/usr/share/vulkan/icd.d/intel_icd.json",
]

#TODO: Declare further TOML configuration files here?

[application]
name = "Vulkan Triangle"

[application.engine]
name = "Vulkanstein3D"

[application.window]
mode = "windowed"
width = 1280
height = 720
name = "Vulkan Triangle"

[application.rendering]
backface_culling = false
# Rendering mode: "rasterization" or "raytracing" (R key toggles at runtime)
mode = "rasterization"
# MSAA sample count: 1 (off), 2, 4, 8, 16 (clamped to device max)
msaa_samples = 4

[application.geometry]
# Geometry source: "triangle" (built-in default), "ply", or "gltf"
source = "gltf"

hdr_file = "@DATA_DIR@/neutral.hdr"

# Path to PLY file (used when source = "ply")
ply_file = "@DATA_DIR@/VertexColorLowerJawScan.ply"

# Path to glTF file (used when source = "gltf")
gltf_file = "@DATA_DIR@/DamagedHelmet/glTF-Binary/DamagedHelmet.glb"

[application.lighting]
# Light type: "directional", "point", or "area"
light_type = "area"

# Light direction (for directional light) or position (for point light)
light_direction = [0.3, 0.5, 1.0]

# Area light corners (counter-clockwise winding, used when light_type = "area")
# Example: 2x2 unit square light positioned 2 units above origin
area_corners = [
    [-1.0, 2.0, -1.0],
    [ 1.0, 2.0, -1.0],
    [ 1.0, 2.0,  1.0],
    [-1.0, 2.0,  1.0],
]
area_two_sided = false

# Light color and intensity
light_color = [1.0, 1.0, 1.0]
light_intensity = 1.0

# Ambient light color
ambient_color = [0.15, 0.15, 0.15]

# Material properties
shininess = 32.0
specular_strength = 0.4
roughness = 0.5  # Used for area light LTC lookup (0.0 = smooth, 1.0 = rough)

[shaders]
[shaders.vertex]
files = [
	"shaders/main.vert.spv",
]

[shaders.fragment]
files = [
	"shaders/main.frag.spv",
]

# TODO: Use key/value pairs and give textures user friendly names.
[textures]
files = [
	"assets/textures/texture_A_1024.jpg",
	"assets/textures/texture_B_1024.jpg",
	"assets/textures/texture_C_1024.jpg",
	"assets/textures/texture_D_1024.jpg",
	"assets/textures/texture_E_1024.jpg",
	"assets/textures/texture_F_1024.jpg",
	"assets/textures/texture_G_1024.jpg",
	"assets/textures/logo_rendered.png",
]

# glTF 2.0 is the new standard 3D model format.
# https://www.khronos.org/gltf/
[glTFmodels]
files = [
      "@DATA_DIR@/DamagedHelmet/glTF-Binary/DamagedHelmet.glb",
      "@DATA_DIR@/CompareMetallic/glTF-Binary/CompareMetallic.glb",
      "@DATA_DIR@/AlphaBlendModeTest/glTF-Binary/AlphaBlendModeTest.glb",
      "@DATA_DIR@/IridescenceMetallicSpheres/glTF/IridescenceMetallicSpheres.gltf",
      "@DATA_DIR@/ScatteringSkull/glTF-Binary/ScatteringSkull.glb",
      "@DATA_DIR@/DiffuseTransmissionPlant/DiffuseTransmissionPlant.glb",
      "@LOCAL_DATA_DIR@/LowerJawScan/LowerJawScan.gltf",
      "@DATA_DIR@/SSSTestSphere/SSSTestSphere.gltf",
]

[HDRenvironments]
files = [
      "@DATA_DIR@/neutral.hdr",
      "@DATA_DIR@/footprint_court.hdr",
      "@DATA_DIR@/hospital_room.hdr",
      "@DATA_DIR@/hospital_room_2.hdr",
      "@DATA_DIR@/surgery.hdr",
      "@DATA_DIR@/childrens_hospital.hdr",
]

[IBL]
# Cubemap face resolution (default 256)
resolution = 256
# Sample counts for compute shader IBL generation
irradiance_samples = 2048
prefilter_samples = 2048
brdf_samples = 1024
