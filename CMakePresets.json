{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "binaryDir": "build/${presetName}",
            "generator": "Ninja Multi-Config",
            "hidden": true
        },
        {
            "name": "linux-clang",
            "inherits": "default",
            "binaryDir": "build/linux-clang",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "BUILD_TESTING": "ON"                
            }
        },
        {
            "name": "linux-gcc",
            "inherits": "default",
            "binaryDir": "build/linux-gcc",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "BUILD_TESTING": "ON"
            }
        },
        {
            "name": "linux-gcc-dotnet",
            "inherits": "linux-gcc",
            "binaryDir": "build/linux-gcc-dotnet",
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "ON",
                "BUILD_TESTING": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "Debug",
            "configurePreset": "linux-clang",
            "configuration": "Debug"
        },
        {
            "name": "Release",
            "configurePreset": "linux-clang",
            "configuration": "Release"
        },
        {
            "name": "Asan",
            "configurePreset": "linux-clang",
            "configuration": "Asan"
        },
        {
            "name": "Tsan",
            "configurePreset": "linux-clang",
            "configuration": "Tsan"
        },
        {
            "name": "Debug-gcc",
            "configurePreset": "linux-gcc",
            "configuration": "Debug"
        },
        {
            "name": "Release-gcc",
            "configurePreset": "linux-gcc",
            "configuration": "Release"
        }
    ],
    "testPresets": [
        {
            "name": "core-test",
            "description": "Enable output on failure",
            "configurePreset": "linux-clang",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "core-test-gcc",
            "description": "Enable output on failure",
            "configurePreset": "linux-gcc",
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}
